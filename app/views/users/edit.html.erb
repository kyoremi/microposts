<h1>Profile edit</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(current_user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%# f.label :prefecture %>
      <%# f.select :prefecture_id%>
      
      <%= f.label :url %>
      <%= f.text_field :url %>
      
      <%= f.label :self_introduction %>
      <%= f.text_area :self_introduction, size: "4x4%>

      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>